<?xml version="1.0" encoding="utf-8"?>

<robot name="basic_link">

    <link name="world">
    </link>

    <joint name="world_to_base_link" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.12 0.15"/>             
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.12 0.15"/>             
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/> 
        </inertial>
    </link>

    <link name="link_1">
        <visual>
            <origin xyz="0.0 0.025 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.5"/>             
            </geometry>
            <material name="green">
                <color rgba="0.0 0.5 0.0 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.0 0.025 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.5"/>             
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/> 
        </inertial>
    </link>

   <joint name="base_link_to_link_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.1415" upper="3.1415" velocity="10.0" effort="500.0"/>
    <origin xyz="0.0 0.06 0.075" rpy="0 0 0"/>
   </joint>

   <link name="link_2">
        <visual>
            <origin xyz="0.0 0.075 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.3"/>             
            </geometry>
            <material name="orange">
                <color rgba="1.0 0.5 0.0 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.0 0.075 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.3"/>             
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.2"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/> 
        </inertial>
    </link>

   <joint name="link_1_to_link_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.1415" upper="3.1415" velocity="30.0" effort="400.0"/>
    <origin xyz="0.0 0.0 0.45" rpy="0 0 0"/>
   </joint>

</robot>
